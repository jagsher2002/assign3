@model IEnumerable<WeCareAssignment.Models.DailyActivity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DailyActivityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DailyActivityName)
            </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DailyActivityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DailyActivityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DailyActivityId">Delete</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
